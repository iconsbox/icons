{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --parallel build",
    "deploy": "yarn generate && node ./scripts/icons/docsBuild.js",
    "coverage": "cross-env BABEL_ENV=test jest --coverage",
    "test": "echo \"Will write tests soon ....\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint packages/**/*.js",
    "lint:eslint": "eslint --ignore-path .gitignore packages",
    "lint:eslint:fix": "eslint packages --fix",
    "lint:js": "npm run lint:eslint -- . ",
    "lint:staged": "lint-staged",
    "prettify": "prettier --write \"packages/**/*.{js,jsx}\"",
    "optimize": "lerna run --parallel optimize",
    "generate": "yarn optimize && lerna run --parallel generate",
    "publish-npm": "lerna run --parallel publish-npm",
    "release": "node ./scripts/release/release.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-multi-entry": "^3.0.0",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.1",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^10.0.0",
    "autoprefixer": "^9.7.4",
    "chalk": "^3.0.0",
    "clean-webpack-plugin": "1.0.0",
    "compression-webpack-plugin": "2.0.0",
    "copy-webpack-plugin": "4.6.0",
    "cross-env": "^7.0.0",
    "css-loader": "2.0.2",
    "docz": "^2.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-redux-saga": "^1.1.1",
    "file-loader": "^3.0.1",
    "fs-extra": "^8.1.0",
    "gh-pages": "^3.1.0",
    "glob": "^7.1.6",
    "html-inline-css-webpack-plugin": "^1.8.1",
    "html-webpack-plugin": "3.2.0",
    "http-server": "0.11.1",
    "jest": "^24.9.0",
    "jest-haste-map": "^24.9.0",
    "jest-resolve": "^24.9.0",
    "jest-styled-components": "^6.3.3",
    "jsdoc": "^3.6.3",
    "jsdoc-to-markdown": "^5.0.3",
    "lerna": "^3.16.5",
    "lint-staged": "^10.0.8",
    "loader-utils": "1.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-html-parser": "^1.2.16",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-test-renderer": "^16.10.2",
    "redux-mock-store": "^1.5.4",
    "rimraf": "^3.0.2",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-inline-svg": "^1.1.1",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-size-snapshot": "^0.11.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.19.2",
    "rollup-plugin-url": "^2.1.0",
    "sass-loader": "7.1.0",
    "semver": "^7.1.3",
    "shelljs": "^0.8.3",
    "style-loader": "0.23.1",
    "url-loader": "1.1.2"
  },
  "lint-staged": {
    "(?!test|spec).*\\.js": [
      "npm run lint:eslint:fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "@iconbox/config": "^1.0.1",
    "json-query": "^2.2.2",
    "node-sass": "^4.14.1",
    "tsc": "^2.0.4",
    "typescript": "^4.7.2"
  }
}
