    "rollup-plugin-url": "^2.1.0",
    "sass-loader": "7.1.0",
    "semver": "^7.1.3",
    "shelljs": "^0.8.3",
    "style-loader": "0.23.1",
    "url-loader": "1.1.2",
    "webpack": "^4.41.0",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.13",
    "webpack-merge": "4.1.5"
  },
  "lint-staged": {
    "(?!test|spec).*\\.js": [
      "npm run lint:eslint:fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "@iconbox/config": "^1.0.1",
    "json-query": "^2.2.2",
    "node-sass": "^4.14.1"
  }
}
