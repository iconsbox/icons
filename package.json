{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "cross-env BABEL_ENV=docs webpack-dev-server -p --progress --mode development",
    "build": "lerna run --parallel build",
    "deploy": "yarn docs:build && gh-pages -d docs -r https://$GH_TOKEN@github.com/snappmarket/iconbox",
    "coverage": "cross-env BABEL_ENV=test jest --coverage",
    "test": "echo \"Will write tests soon ....\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint packages/**/*.js",
    "lint:eslint": "eslint --ignore-path .gitignore packages",
    "lint:eslint:fix": "eslint packages --fix",
    "lint:js": "npm run lint:eslint -- . ",
    "lint:staged": "lint-staged",
    "prettify": "prettier --write \"packages/**/*.{js,jsx}\"",
    "optimize": "lerna run --parallel optimize",
    "generate": "yarn optimize && lerna run --parallel generate",
    "publish-npm": "lerna run --parallel publish-npm",
    "release": "node ./scripts/release/release.js",
    "docs:dev": "cross-env BABEL_ENV=docs webpack -p --progress --mode development",
    "docs:watch": "cross-env BABEL_ENV=docs webpack -p --progress --mode development --watch",
    "docs:build": "node ./scripts/icons/docsBuild.js && cross-env BABEL_ENV=docs webpack -p --progress --mode production"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-multi-entry": "^3.0.0",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.1",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^10.0.0",
    "autoprefixer": "^9.7.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-optimize-clsx": "^2.6.0",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-dev-warning": "^0.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-preset-airbnb": "^4.4.0",
    "chalk": "^3.0.0",
    "clean-webpack-plugin": "1.0.0",
    "compression-webpack-plugin": "2.0.0",
    "copy-webpack-plugin": "4.6.0",
    "cross-env": "^7.0.0",
    "css-loader": "2.0.2",
    "docz": "^2.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-redux-saga": "^1.1.1",
    "file-loader": "^3.0.1",
    "fs-extra": "^8.1.0",
    "gh-pages": "^3.1.0",
    "glob": "^7.1.6",
    "html-inline-css-webpack-plugin": "^1.8.1",
